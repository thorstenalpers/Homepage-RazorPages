<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <environment include="Development, Prod">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css" />
    </environment>
    <environment include="Development">
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment include="Prod">
        <link rel="stylesheet" href="~/css/site.min.css" />
    </environment>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-light">
            <div class="container">
                <a class="navbar-brand pull-left w-50" asp-page="/Index">Thorsten</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-center w-100" id="navbarSupportedContent">
                    <ul class="navbar-nav">
                        <li class="nav-item @(ViewContext.RouteData.Values["page"].ToString() == "/Index" ? "active" : "" )"><a asp-page="/Index" class="nav-link text-dark">Über mich</a></li>
                        <li class="nav-item @(ViewContext.RouteData.Values["page"].ToString() == "/Kenntnisse" ? "active" : "")"><a asp-page="/Kenntnisse" class="nav-link text-dark">Kenntnisse</a></li>
                        <li class="nav-item @(ViewContext.RouteData.Values["page"].ToString() == "/Lebenslauf" ? "active" : "")"><a asp-page="/Lebenslauf" class="nav-link text-dark">Lebenslauf</a></li>
                        <li class="nav-item @(ViewContext.RouteData.Values["page"].ToString() == "/Kontakt" ? "active" : "")"><a asp-page="/Kontakt" class="nav-link text-dark">Kontakt</a></li>
                    </ul>
                </div>
                <div class="navbar-nav justify-content-end w-50" />
            </div>
        </nav>

    </header>

    <div class="container">
        <main role="main" class="pb-3 pt-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2019 - Thorsten Alpers - <a asp-page="/Impressum">Impressum</a> - <a asp-page="/Datenschutz">Datenschutz</a>
        </div>
    </footer>
    <environment include="Development, Prod">
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
        <script src="~/lib/particles.js/particles.min.js"></script>
        <script src="~/lib/typed.js/typed.min.js"></script>
        <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
        <script src="~/lib/progressbar.js/progressbar.min.js"></script>
    </environment>
    <environment include="Development">
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment include="Prod">
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>
    @RenderSection("Scripts", required: false)
</body>
</html>
